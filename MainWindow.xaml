        <TextBox x:Name="txthello" HorizontalAlignment="Left" Margin="116,310,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="502" Height="38" FontSize="20"/>
        <TextBox HorizontalAlignment="Left" Margin="116,184,0,0" TextWrapping="Wrap" Text=" scanf your name" VerticalAlignment="Top" Width="177" Height="33" TextChanged="TextBox_TextChanged" FontSize="20"/>
        <TextBox HorizontalAlignment="Left" Margin="116,241,0,0" TextWrapping="Wrap" Text="scanf your city" VerticalAlignment="Top" Width="177" Height="33" FontSize="20" TextChanged="TextBox_TextChanged_1"/>
    </Grid>
</Window>
