        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF27A8AA">
    <Grid Cursor="Help">
        <TextBox x:Name="txtname" HorizontalAlignment="Left" Height="33" Margin="310,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Height="99" Margin="191,52,0,0" TextWrapping="Wrap" Text="   weclome" VerticalAlignment="Top" Width="427" FontSize="72" FontFamily="STCaiyun" Opacity="0.995"/>
